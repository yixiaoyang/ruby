<h1>TestMaps#show</h1>

<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
  <style type="text/css">
  body, html,#allmap {width: 100%;height: 80%;overflow: hidden;margin:0;}
  #r-result{width:100%;margin-top:5px;}
  </style>
  <script type="text/javascript" src="http://api.map.baidu.com/api?v=2.0&ak=A1dfdd248c6558ff148a9852ec429317"></script>
  <title>Map Show</title>
</head>
<body>
  <p>Find me in app/views/test_maps/show.html.erb</p>
  <div id="allmap">
    <div id="r-result"></div>
  </div>
</body>
<script type="text/javascript">
  var map = new BMap.Map("allmap");    
  map.centerAndZoom("<%=@city%>");  
  map.addControl(new BMap.MapTypeControl());  
  map.setCurrentCity("<%=@city%>");          
  
  var top_left_control = new BMap.ScaleControl({anchor: BMAP_ANCHOR_TOP_LEFT});
  var top_left_navigation = new BMap.NavigationControl();  
  var top_right_navigation = new BMap.NavigationControl({anchor: BMAP_ANCHOR_TOP_RIGHT, type: BMAP_NAVIGATION_CONTROL_SMALL}); 
  map.addControl(top_left_control);        
  map.addControl(top_left_navigation);     
  map.addControl(top_right_navigation);    
</script>
