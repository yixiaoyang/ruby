<% @user = user %>
<% show_del_link ||= false %>
<li>
<%= link_to gravatar_for(user), user%> 
<%= link_to user.name, user %>
| <%=mail_to user.email %>
<% if current_user.admin? && !current_user?(user) && show_del_link %>
| <%= link_to "delete", user, method: :delete, data:{ confirm:"You sure?" }   %>
<% end %>
</li>
