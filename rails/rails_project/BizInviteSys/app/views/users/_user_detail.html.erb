<% if current_user.admin?%>
<li> 
  <strong>ID:</strong>
  <%= @user.id %>
</li>
<% end %>
<li>
  <strong>Name:</strong>
  <%=@user.name %>
</li><li>
  <strong>Email:</strong>
  <%=mail_to @user.email %>
</li>
<li>
  <strong>Profile Status:</strong>
  <% if @user.profile.nil? %>
