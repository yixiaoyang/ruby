  <% else %>
   <a href="<%=profile_path(@user.profile.id)%>"><span class="badge badge-important"><%=PROFILE_STATS_WORDS[@user.profile.stat]%>
   </span></a> <a href="<%=profile_path(@user.profile.id)%>">more...<a>
  <% end %>
</li>
