<% provide(:title, "Sign in")%>
<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url:sessions_path) do |f| %>
      
      <%= f.label :email %>
      <%= f.text_field :email ,type:"email", class:"form-control", placeholder:"Enter email"%>
      
      <%= f.label :password %>
      <%= f.password_field :password ,placeholder:"Enter password"%>
      
      <%= f.submit "Sign in", class:"btn btn btn-primary"%>
      <span><%= link_to "Forgot Password?", forgot_passwd_path %></span><br>
    <% end %>
  </div>
</div>
