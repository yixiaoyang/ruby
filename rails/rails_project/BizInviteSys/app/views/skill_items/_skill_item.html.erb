<% skill ||= skill_item.skill %>
<% ajax_view ||= false%>

<tr id=<%="#{SkillItemsController.gen_tr_id(skill_item.id)}"%> >
  <td class="td_left">
  <li>
  <div class="best_in_place_div">
    <strong>Skill_ID:</strong>
    <span class="badge"> <%= skill_item.skill_id %></span> |  
  
    <strong>Category:</strong>
    <span class="<%="badge #{SKILL_CATEGORY_STYLES[skill.category]}"%>">
    <%= SKILL_CATEGORY_WORDS[skill.category] %></span> |  
  
  <strong>Score:</strong>
  <span class="badge badge-info"><%= skill.score %></span>
  
  </li><li>
  <strong>Description:</strong>
  <%= skill.description%>  
  </li>
  </div>
  </td>

   <% if current_user?(skill_item.owner) %>
    <td>
      <% if ajax_view %>
        <span><%= link_to 'Show', skill_item %></span> | 
      <%end%>
      <span><%= link_to 'Edit', edit_skill_item_path(skill_item) %></span> | 
      <span><%= link_to 'Destroy', skill_item, method: :delete, data: { confirm: 'Are you sure?' }, remote: ajax_view  %>
    </td>
  <% end %>

</tr>
