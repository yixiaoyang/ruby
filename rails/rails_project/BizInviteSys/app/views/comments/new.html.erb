<% @ajax_view ||= false%>
<% if @ajax_view %>
  <%= render 'form'%>
<% else%>
  <% provide(:title, "Comment Edit")%>
  <p id="notice"><%= notice %></p>
  <h1>New comment</h1>

  <div class="row">
  <aside class="span3">
  <div class="aside-left-my-info">
    <%= render 'shared/my_info' %>
  </div>
  </aside>
  
  <div class="span9 ">
    <ul class="normal_ul">
      <%= render 'form' %>
      <%= link_to 'Back', comments_path %>
    </ul>
  </div>
  </div>
<% end %>





